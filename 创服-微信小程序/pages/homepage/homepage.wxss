/* pages/homepage/homepage.wxss */
page {
  /*background: #abd8e4;*/
  background: #ffffff;
  height: 100%;/*生效*/
  position: relative;
  /*top:-18px;*/
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  /*overflow: hidden;*/
  overflow-y: auto;

}

.page-content {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  /*background: #abd8e4;*/
  background: #ffffff;
}

.mainFrame {
  margin-top: 0px;
  height: 100%;
  display: flex;
  flex-direction: column;
}
 
.container {
  height: 1200rpx;
  padding-top: 0px;
}
.item{
  display: flex;
  flex-direction: col;
  position: relative;
  left: 40%;
  color: rgb(212, 182, 12);
  /*margin-left: 30%;*/
} 
.icon_right{
  height: 30px;
  width: 30px;
  padding-right: 60rpx;
 
}
.icon_left{
    height: 30px;
  width: 30px;
    padding-left: 60rpx;
}
.vol-swiper-item {
 
  box-sizing: border-box;
  padding-top: 60rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
 
.title {
 
  display: block;
  width: 100%;
  height: 50px;
  color: #f00;
}
 
.time {
  font-size: 22rpx;
  text-align: right;
} 
.vol-card {
  /*parent layout  and  this inner padding*/
  padding: 80rpx;
  height: 75%;
  border: 10rpx solid #9fbbe4;
  border-radius: 5px;
  box-shadow: 15rpx 15rpx 15rpx #8b8eaa;
  background: #fff;
  margin-top: 0px;
}
.vol-swiper {
  height: 100%;
}
 
.vol-picture {
  width: 100%;
}
.vol-meta-title {
  margin-top: 5px;
  text-align: center;
  padding: 10rpx 5rpx;
  font-size: 17px;
  color: #000;
  font-family: 'KaiTi';
}
 
.vol-meta-time {
  padding: 10rpx 5rpx;
  font-size: 12px;
  padding-right: 5px;
  color: #888;
}
 
 
.vol-content {
  margin-top: 15rpx;
  padding: 0 5rpx;
  font-size: 14px;
  line-height: 1.4;
  font-family: 'KaiTi';
  color: #9c9c9c;
}
 
.vol-content-text {
  margin-top: 5px;
  width: 100%;
  min-height: 200rpx;
  display: inline-block;
  text-indent: 2em;
}
 
.vol-makettime {
  font-size: 13px;
  color: #888;
  text-align: right;
}
